#! /usr/bin/env php

<?php

use function Parsers\chooseFormatToParse;
use function Differ\genDiff;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC

Generate diff

Usage:
  gendiff (-h | --help)
  gendiff (-v | --version)
  gendiff [--format <fmt>] <firstFile> <secondFile>


Options:
  -h --help             Show this screen
  -v --version          Show version 
  --format <fmt>        Report format [default: stylish]

DOC;

//require('./vendor/docopt/docopt/src/docopt.php');
$params = array(
    'help'=>true,
    'version'=>'1.0'
);
$args = Docopt::handle($doc, $params);

$path1 =__DIR__.'/'.$args['<firstFile>'];
$path2 =__DIR__.'/'.$args['<secondFile>'];


print_r(genDiff(chooseFormatToParse($path1), chooseFormatToParse($path2)));
